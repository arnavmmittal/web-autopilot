{
  "name": "web-autopilot",
  "version": "0.1.0",
  "description": "A Copilot-like Playwright automation tool for website exploration and bug reporting",
  "type": "module",
  "bin": {
    "web-autopilot": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x dist/index.js",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@web-autopilot/core": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "crawler",
    "bug-reporting",
    "accessibility",
    "web-testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/web-autopilot.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/web-autopilot/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
